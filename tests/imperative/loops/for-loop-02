/*
 *   here we test the efficiency of long-running
 *   FOR LOOPS
 */

// UNCOMMENT THE FOR LOOP YOU'D LIKE TO EXECUTE

for(num i=1; i<=1000; i = i + 1) {
    println(i);
}

for(num i=1; i<=10000; i = i + 1) {
    println(i);
}

for(num i=1; i<=100000; i = i + 1) {
    println(i);
}

for(num i=1; i<=1000000; i = i + 1) {
    println(i);
}
println("done!");

// some more sophisticated loop body
for(num i=0; i<=1000000; i = i + 1) {

    i = i + 2;
    
    println (i);
    
    i = i + 3;
    
    println (i);
    
    i = i + 4;
}
