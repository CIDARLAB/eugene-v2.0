/*
 *   PART LIBRARY
 */
Property prop1(txt);
Property repress(txt); 
Property name(txt); 
Property strength(num);
Property PIGEON(txt);

PartType Promoter(name, strength, PIGEON);
PartType Gene(name, strength, repress, PIGEON);


Promoter p0(.name("p0"), .strength(0), .PIGEON("p p0 1"));
Promoter p1(.name("p1"), .strength(1), .PIGEON("p p1 2"));
Promoter p2(.name("p2"), .strength(2), .PIGEON("p p2 3"));
Promoter p3(.name("p3"), .strength(3), .PIGEON("p p3 4"));
Promoter p4(.name("p4"), .strength(4), .PIGEON("p p4 5"));
Promoter p5(.name("p5"), .strength(5), .PIGEON("p p5 6"));
Promoter p6(.name("p6"), .strength(6), .PIGEON("p p6 7"));
/**
Promoter p7(.name("p7"), .strength(7), .PIGEON("p p7 8"));
Promoter p8(.name("p8"), .strength(8), .PIGEON("p p8 9"));
Promoter p9(.name("p9"), .strength(9), .PIGEON("p p9 10"));
 **/
 
Gene g0(.repress("p0"), .strength(0), .PIGEON("g g0 1"));
Gene g1(.repress("p1"), .strength(1), .PIGEON("g g1 2"));
Gene g2(.repress("p2"), .strength(2), .PIGEON("g g2 3"));
Gene g3(.repress("p3"), .strength(3), .PIGEON("g g3 4"));
Gene g4(.repress("p4"), .strength(4), .PIGEON("g g4 5"));
/**
Gene g5(.repress("p5"), .strength(5), .PIGEON("g g5 6"));
Gene g6(.repress("p6"), .strength(6), .PIGEON("g g6 7"));
Gene g7(.repress("p7"), .strength(7), .PIGEON("g g7 8"));
Gene g8(.repress("p8"), .strength(8), .PIGEON("g g8 9"));
Gene g9(.repress("p9"), .strength(9), .PIGEON("g g9 10"));
 **/
 
/*
 *  INTERACTIONS
 */
g0 represses p0;
g1 represses p1;
g2 represses p2;
g3 represses p3;
g4 represses p4;
/**
g5 represses p5;
g6 represses p6;
g7 represses p7;
g8 represses p8;
g9 represses p9;
 **/

Device D01([Gene|Promoter]);
lod = product(D01);
//println(lod);
//pigeon (lod);


Device D02([Gene|Promoter], [Gene|Promoter]);
Rule R02_1(ON D02:
	Gene with Promoter
	/\
	not Promoter same_orientation Gene
	/\
	forward Promoter 
	/\
	reverse Gene
	/\
	Promoter after Gene
);
		
Rule R02_2(ON D02:
	Gene with Promoter
	/\
	not Promoter same_orientation Gene
	/\
	reverse Promoter 
	/\
	forward Gene
	/\
	Promoter before Gene
);
lod = product(D02);

println(lod);

pigeon(lod);


